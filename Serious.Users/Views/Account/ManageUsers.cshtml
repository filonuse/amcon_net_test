@using Serious.Users.Models
@model ManageUserViewModel
@{
    ViewBag.Title = "Manage Users";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/Scripts/view/manage-users.js")"></script>
}

<h2>
    @ViewBag.Title.
</h2>
<div class="row">
    <div class="col-md-8">
        <h4>Active Users:</h4>
        <hr />
        @foreach (var user in Model.Users)
        {
            <div class="form-group">
                @user.Email
                <div class="col-md-10">
                    <a href="#" onclick="window.adminUser.logOffUser('@user.Email'); return false;">Log Off</a>
                </div>
             </div>
        }
        
        </div>
</div>
@Html.Hidden("LogOutUrl", Url.Action("OnLoggOutUser", "Account"))